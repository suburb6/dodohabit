rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read for posts so anyone can see the blog
    match /posts/{post} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow authenticated users to manage media
    match /media/{item} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Public users can submit feedback (server also writes via REST); only authenticated users can read/manage.
    match /feedback/{item} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }

    // Default deny for everything else
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
